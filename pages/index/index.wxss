/**index.wxss**/
page{
  padding-bottom: 120rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.bottom-btn{
  width:100%;
  text-align:center;
  /* border-top:1px solid #aaa; */
  height:96rpx;
  line-height:96rpx;
  position:fixed;
  bottom:0;
  left: 0;
  background: #17d27c;
}
.bottom-btn-text{
  font-size: 34rpx;
  color: #fff;
  height:100%;

}
.title{
  font-size: 58rpx;
  color: #333333;
}
.content{
  font-size: 38rpx;
  color: #ccc;
}
.txt-content{
  margin-top: 28rpx;
}
.index-img{
  width: 200rpx;
  height: 200rpx;
  margin:40rpx 0;
}

/* news */
page{
  background: #F5F5F5;
}
.item{
  width: 100%;
  min-height: 128rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #F5F5F5;
  padding:30rpx 30rpx 30rpx;
  position: relative;
  
  background-color: #ffffff;
}
.item.active{
background: url("data:image/png;base64,") no-repeat;
background-size:80rpx 80rpx;
background-position:top right;
background-color: #ffffff;
}
.top{
  display: flex;
  justify-content:space-between;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333
}
.bottom{
  display: flex;
  justify-content:space-between;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #cccccc;
  margin-top: 14rpx;
}
.label-time{
  padding-right: 20rpx;
}
.news-info{
  display: flex;
}
.news-title{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:550rpx;
  height:40rpx;
}
.add-group{
  font-size:34rpx;
  color:#fff;
  background:#17d27c;
  padding:0;
  border:none;
  height: 100%;
}
.add-group::after{
  border: none
}