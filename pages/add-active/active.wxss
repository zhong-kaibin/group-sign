/* pages/active/active.wxss */
page{
  background: #F5F5F5;
}
.item-block{
  background: #ffffff;
  margin-bottom: 20rpx;
}
.img{
  /* width: 140rpx;
  height: 162rpx; */
  width:126rpx;
  height:140rpx;
  margin-right: 14rpx;
  float: left
}
.title{
  width:90%;
  font-size:38rpx;
  border-bottom: 1rpx solid #F5F5F5;
  height:100rpx;
  line-height:100px;
  margin:0 auto;
}
.tips{
  width:90%;
  font-size:30rpx;
  margin:0 auto;

}
.area-tips{
  padding: 20rpx 0;
  height: auto;
  line-height: 1.5;

}
.upload{
  width:90%;
  margin:0 auto;
  padding-bottom: 22rpx;
  overflow: hidden;
  padding: 5rpx 0;
}
.item{
  height: 100rpx;
  padding-left: 30rpx;
  padding-right: 40rpx;
  font-size: 32rpx;
  display: flex;
  justify-content:space-between;
  align-items:center;
  border-bottom: 1rpx solid #F5F5F5;
}
.label{
  display:flex;
  align-items:center;
  height:100%;
  width:300rpx;

}
.icon{
  width: 32rpx;
  height: 32rpx;
  margin-right:10rpx;
  /* margin-top:5rpx; */
}
.label-text{
  font-size: 32rpx;
}
.status{
  /* float: right; */
}
.operate-btn{
  margin-bottom: 40rpx;
}
.btn{
  width: 480rpx;
  height: 88rpx;
  border-radius:50rpx;
  margin-top:30rpx;
  line-height:88rpx;
  font-size: 34rpx;
  background:#17d27c;
  color: #ffffff;
}
.mt60{
  margin-top:60rpx;

}
.btn::after{
  content: none;
}
.label-msg{
  font-size: 24rpx;
  /* color: #cccccc; */
  text-align: right;
}
.btn-item{
  font-size: 32rpx;
  color: #9b9b9b;
  padding: 10rpx 30rpx;
  margin-right: 32rpx;
  border: 1rpx solid #9b9b9b; 
  border-radius:30rpx;
}
.btn-checked{
  color: #17d27c;
  border: 1rpx solid #17d27c; 
}
.sign-btn{
  justify-content:flex-start;
  padding-left: 80rpx;
}
.img-wrap{
  position: relative;
   padding: 20rpx 20rpx 20rpx 0;
}
.img-div{
  padding: 20rpx
}
.del-icon{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 0rpx;
  right: 20rpx;
}
.bgfff{
  background: #FFFFFF;
  color: #C3C3C3
}
.disabled .btn{
  background: #EEEEEE;
  color:#9b9b9b;

}

.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  }

.modal-body{
  position:relative;
  }

.modal-content{
  /* width: 60%; */
  margin:0 10% 0 30%;
  overflow: hidden;
  border-radius: 10rpx;}

.modal-content{
  width: 60%;
  height:150px; 
}
.modal-content .fenxiang{
  width: 100%;
  height: 40%;
}